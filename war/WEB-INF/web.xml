<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
  	<servlet-name>suggestKeyword</servlet-name>
  	<servlet-class>pian.server.SuggestKeywordServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>suggestKeyword</servlet-name>
  	<url-pattern>/pian/suggestKeyword</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Pian.html</welcome-file>
  </welcome-file-list>
  
  <resource-ref> 
      <description>SQLite DB Connection</description> 
      <res-ref-name>jdbc/PianDB</res-ref-name> 
      <res-type>javax.sql.DataSource</res-type> 
      <res-auth>Container</res-auth> 
  </resource-ref> 

</web-app>
